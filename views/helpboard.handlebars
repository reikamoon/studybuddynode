<br>
<center>
<h1> HELP WANTED </h1>
<a href="/helpboard/new" class="btn btn-primary ml-1">Make a Request</a><a href="/" class="btn btn-primary ml-1">My Assignments</a><a href="/notes" class="btn btn-primary ml-1">My Notes</a><a href="/schedule" class="btn btn-primary ml-1">Schedule</a><hr>
</center>
<div class="row">
    <div class="col-sm-12 col-sm-offset-8">
        <ul>
          {{#if requests}}
            {{#each requests}}
                <li class="list-group-item">
                    <div class="lead">{{this.title}}</div>
                    <div><small>by: {{this.author.username}}</small></div>
                    {{#if duedate}}
                    <p>Due Date: {{this.duedate}}</p>
                    {{else}}

                    {{/if}}
                    <p>{{this.description}}</p>
                    {{#if url}}
                    <a href="{{this.url}}" target="_blank">Link to Assignment</a><br>
                    {{else}}

                    {{/if}}
                    <a href="/helpboard/{{this.id}}/details" class="btn btn-primary ml-1">Read More</a>
                </li>
            {{/each}}
            {{else}}
            <h1>No Requests!</h1>
            {{/if}}
        </ul>
    </div>
</div>
