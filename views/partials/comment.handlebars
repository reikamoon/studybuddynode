<div class="col-xs-12 comment-indent">
    <h5>{{comment.author.username}}</h5>
    <p>{{comment.content}}</p>
    <a href="/helpboard/{{requestId}}/comments/{{comment._id}}/replies/new">Reply</a>
    {{#each comment.comments}}
        {{> comment comment=this requestId=../requestId}}
    {{/each}}
</div>
